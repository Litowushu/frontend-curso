gris_oscuro = #555
azul = #22BCE0
naranja = #DD4F24
gris_texto = #7A7A7A

@font-face {
    font-family: 'iconitos';
    src:    url('../fonts/icomoon.eot?bkrtzv');
    src:    url('../fonts/icomoon.eot?bkrtzv#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf?bkrtzv') format('truetype'),
        url('../fonts/icomoon.woff?bkrtzv') format('woff'),
        url('../fonts/icomoon.svg?bkrtzv#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}
a
	color naranja
body
	background #E8E8E8
	color gris_oscuro
	font-family arial
	font-size 16px
footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center	
	width 100%
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
		.mejor
			&:before
			&:after
				content " - "
	
header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	padding 10px
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1
	
	.logo
		border-right 1px solid azul
		width 60px
		float left
		
		img
			width 52px 
	.titular
		margin 0 65px 0 70px
		
		.filtro 
			color azul
			font-size 14px	
			font-weight bold
			font-style italic
			text-decoration none
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			&:before
				display inline-block
				font-family "iconitos"
				content "\e902"
				margin 0 5px 0 0
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		top 10px
		right 10px
		
		.avatar
			position relative
			margin 0 1.1em 0 0
			z-index 2
			img							
				border-radius 50%
				width 50px
				
		.flechita
			background naranja
			color white
			display block			
			padding 2px
			position absolute			
			right 0
			top 15px
			text-align right
			width 50%
			z-index 0
			&:after
				display inline-block
				font-family "iconitos"
				content "\e900"
				text-shadow 1px 1px 0 black			
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		li
			display inline-block
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
.posts
	padding 0.5em	
	.post
		background white
		border-radius 0 0 0.5em 0.5em		
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_texto
		margin-bottom 0.5em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			.datos
				float right
				
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
				.estrellita	
					text-decoration none				
					&:before
			
						content "\e903"
						color #E0D561
						font-family "iconitos"
						
			.votos
				.down
				.up
					text-decoration none

				float left	
				.down
					color red
					
					&:before
						font-family "iconitos"
						content "\e900"
						font-size 1.5em
						vertical-align bottom
				.up
					color green
					&:before
						font-family "iconitos"
						content "\e901"
						font-size 1.5em
						vertical-align bottom
		
		.descripcion
					
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
				
				.fecha
					float right
					margin 0 1em 0 0
					

				.tag 
					background azul
					border-radius 0.5em
					color white
					text-decoration none
					padding 0.2em 0.5em
					
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
					
					
			.imagen 			
				float left
				margin 0				
				img
					height 160px
					vertical-align top
					width 120px
					
@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 2.1em
				position relative
				
				&:before
					left 0px
					font-size 2em
					position absolute
					top -10px
				
	.posts
		.post
			display inline-block
			width 48.5%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%




							